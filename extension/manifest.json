{
  "name": "Buy mode",
  "version": "0.3",
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "description": "When entering Amazon, music (The Sims, Nook Store, Wii Store) is launched.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "https://*.amazon.com/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.de/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.at/*",
    "https://*.amazon.es/*",
    "https://*.amazon.com.mx/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.it/*",
    "https://*.amazon.in/*",
    "https://*.amazon.cn/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.com.au/*"
  ],
  "browser_action": {
    "default_title": "Buy Mode",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2,
  "incognito": "split"
}
